        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var brName = "Assignment Group Based Restriction: ";
	
	if (!gs.getUser().hasRole("admin")) {
		gs.log(brName + "Not Admin");
		if (gs.getSession().isInteractive()) {
			gs.log(brName + "Interactive");

			// Get list of groups that user is part of
			var loggedUser = gs.getUser();
			var userGroups = getMyGroups().toArray();
			var n = 0;

			var userQuery = current.addQuery("caller_id", loggedUser);

			
			for (var group in userGroups) {
				gs.log(brName + n + " " + userGroups[group]);
				n++;
				userQuery.addOrCondition("assignment_group", userGroups[group]);
			}

			gs.log(brName +"Query " + current.getEncodedQuery());
			
		}
	}

})(current, previous);]]></script>
